{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@default/*": ["apps/amineTest/src/app/*"],
      "@env/*": ["apps/amineTest/src/environments/*"],
      "@myproject/*": ["libs/*"],
      "@myproject/articles/article": ["libs/articles/feature-article/src/index.ts"],
      "@myproject/articles/article-edit": ["libs/articles/feature-article-edit/src/index.ts"],
      "@myproject/articles/articles-list": ["libs/articles/feature-articles-list/src/index.ts"],
      "@myproject/articles/data-access": ["libs/articles/data-access/src/index.ts"],
      "@myproject/auth/data-access": ["libs/auth/data-access/src/index.ts"],
      "@myproject/auth/feature-auth": ["libs/auth/feature-auth/src/index.ts"],
      "@myproject/core/api-types": ["libs/core/api-types/src/index.ts"],
      "@myproject/core/excel-utils": ["libs/core/excel-utils/src/index.ts"],
      "@myproject/core/data-access": ["libs/core/data-access/src/index.ts"],
      "@myproject/core/error-handler": ["libs/core/error-handler/src/index.ts"],
      "@myproject/core/forms": ["libs/core/forms/src/index.ts"],
      "@myproject/core/http-client": ["libs/core/http-client/src/index.ts"],
      "@myproject/home/feature-home": ["libs/home/feature-home/src/index.ts"],
      "@myproject/profile/data-access": ["libs/profile/data-access/src/index.ts"],
      "@myproject/settings/data-access": ["libs/settings/data-access/src/index.ts"],
      "@myproject/settings/feature-settings": ["libs/settings/feature-settings/src/index.ts"],
      "@myproject/ui/components": ["libs/ui/components/src/index.ts"]
    },
    "strict": true
  },
  "exclude": ["node_modules", "tmp"]
}
